extends ../../../views/layout

block content
  - const backlinkList = backlinks || [];

  div(class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4")
    div
      h2(class="text-3xl font-semibold text-slate-900 tracking-tight") Backlink intelligence
      p(class="text-slate-500 mt-2") Track referring domains, authority, and velocity changes for #{site ? site.domain : 'your site'}.
    form(action="/reverb/backlinks/sync" method="post" class="inline-flex")
      input(type="hidden" name="mock" value="true")
      button(type="submit" class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-blue-700 transition")
        i(data-lucide="refresh-cw" class="w-4 h-4")
        | Refresh backlinks

  if feedback && feedback.status
    div(class=(feedback.status === 'success' ? 'bg-emerald-50 border border-emerald-200 text-emerald-700' : 'bg-red-50 border border-red-200 text-red-700') + ' rounded-xl px-4 py-3 mb-6 text-sm flex items-start gap-3')
      i(data-lucide=feedback.status === 'success' ? 'check-circle' : 'alert-triangle' class="w-4 h-4 mt-0.5")
      span #{feedback.message || (feedback.status === 'success' ? 'Backlinks refreshed successfully.' : 'Unable to refresh backlinks.')}

  div(class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6")
    h3(class="text-lg font-semibold text-slate-900 mb-4") Recent backlinks
    if backlinkList.length
      table(class="w-full text-sm text-left text-slate-600 border-t border-slate-200")
        thead
          tr(class="text-xs uppercase text-slate-500 tracking-wide")
            th(class="py-3") Source
            th(class="py-3") Target
            th(class="py-3") Anchor
            th(class="py-3") Authority
            th(class="py-3") Velocity
            th(class="py-3") First seen
            th(class="py-3") Last seen
        tbody
          each link in backlinkList
            - const source = link.sourceUrl || '—';
            - const target = link.targetUrl || '—';
            - const anchor = link.anchorText || '—';
            - const metrics = link.metrics || {};
            - const da = metrics.domainAuthority !== undefined ? metrics.domainAuthority : '—';
            - const pa = metrics.pageAuthority !== undefined ? metrics.pageAuthority : '—';
            - const velocity = link.velocity || {};
            - const trend = velocity.trend || 'steady';
            - const velocityClass = trend === 'down' ? 'bg-red-100 text-red-600' : trend === 'up' ? 'bg-emerald-100 text-emerald-600' : 'bg-slate-100 text-slate-600';
            - const firstSeen = link.firstSeenAt ? new Date(link.firstSeenAt) : null;
            - const lastSeen = link.lastSeenAt ? new Date(link.lastSeenAt) : null;
            tr(class="border-t border-slate-200 hover:bg-slate-50 transition")
              td(class="py-3")
                a(href=source target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-700 line-clamp-1") #{source}
              td(class="py-3 text-slate-500 line-clamp-1") #{target}
              td(class="py-3 text-slate-600") #{anchor}
              td(class="py-3")
                span(class="inline-flex items-center gap-2 text-sm")
                  span DA #{da}
                  span PA #{pa}
              td(class="py-3")
                span(class=["inline-flex items-center px-2 py-0.5 rounded text-xs font-medium", velocityClass]) #{trend}
              td(class="py-3") #{firstSeen ? firstSeen.toLocaleDateString() : '—'}
              td(class="py-3") #{lastSeen ? lastSeen.toLocaleDateString() : '—'}
    else
      p(class="text-sm text-slate-500") No backlinks captured yet. Refresh to pull data from providers or mock sources.


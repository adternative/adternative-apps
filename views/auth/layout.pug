extends ../layout

block content
  // Mobile overlay
  div(id="mobileOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden")
  
  // Sidebar + main content layout
  div(class="flex h-screen")
    // Sidebar - Dark design with fixed user section
    div(id="sidebar" class="fixed lg:relative inset-y-0 left-0 z-20 w-72 bg-purple-950 shadow-2xl  flex flex-col transform -translate-x-full lg:translate-x-0 transition-all duration-300 ease-in-out h-screen")
      // Mobile close button
      div(class="lg:hidden flex justify-end p-6")
        button(id="closeSidebarBtn" class="text-slate-400 hover:text-white transition-colors")
          i(data-lucide="x" class="w-6 h-6")

      // Sidebar title
      div(class="px-6 pb-6 pt-1 border-b border-purple-900")
        h2(class="text-xl font-bold text-white") Navigation
        p(class="text-sm text-slate-400 mt-1") Manage your dashboard

      // Navigation sections - scrollable area with fixed height
      nav(class="flex-1 px-6 py-6 space-y-8 overflow-y-auto")
        // Pages Section
        div
          div(class="space-y-1")
            a(href="/dashboard" class="group flex items-center px-4 py-3 rounded-xl text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === 'Dashboard' ? ' bg-purple-900 text-white' : ''))
              span(class="font-medium") Dashboard
            a(href="/stats" class="group flex items-center px-4 py-3 rounded-xl text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === 'Stats' ? ' bg-purple-900 text-white' : ''))
              span(class="font-medium") Stats
            a(href="/budget" class="group flex items-center px-4 py-3 rounded-xl text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === 'Budget' ? ' bg-purple-900 text-white' : ''))
              span(class="font-medium") Budget
            a(href="/media" class="group flex items-center px-4 py-3 rounded-xl text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === 'Media' ? ' bg-purple-900 text-white' : ''))
              span(class="font-medium") Media Library
            a(href="/performance" class="group flex items-center px-4 py-3 rounded-xl text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === 'Performance' ? ' bg-purple-900 text-white' : ''))
              span(class="font-medium") Performance
        
        // Apps Section
        div
          h3(class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-4 flex items-center")
            | Apps
          div(class="space-y-1")
            each app in availableApps
              a(href=app.path class="group flex items-center px-4 py-3 rounded-xl  text-teal-400 hover:text-white hover:bg-purple-900 transition-all duration-200" + (title === app.name ? 'bg-purple-900 text-white ' : ''))
                i(data-lucide=app.icon class="w-5 h-5 mr-3 group-hover:scale-110 transition-transform" + (title === app.name ? 'text-white' : 'text-teal-400'))
                span(class="font-medium")=app.name

      
     

    // Page content - positioned to the right of sidebar
    div(class="flex-1 overflow-auto bg-purple-50 rounded-tl-3xl")
      div(class="p-8")
        block page
